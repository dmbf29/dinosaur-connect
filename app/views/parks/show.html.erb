<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @park.banner_url %>);">
  <div class="container">
    <h1><%= @park.name %></h1>
    <%= link_to 'Add Dinosaur', new_park_dinosaur_path(@park), class: 'btn btn-success mt-2' %>
  </div>
</div>
<div class="container mt-3">
  <h3>Dinosaurs</h3>
  <div class="cards">
    <% @park.dinosaurs.each do |dinosaur| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= dinosaur.image_url %>)">
        <%= dinosaur.name %>
        <%= link_to dinosaur_path(dinosaur), method: :delete, data: { confirm: "Destroy #{dinosaur.name}?" }, class: 'card-remove-link' do %>
          <i class="fas fa-meteor"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
