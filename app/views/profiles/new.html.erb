<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-8 col-lg-6">
      <h1>Add a Power</h1>
      <%= simple_form_for [@dinosaur, @profile] do |f| %>
        <%= f.association :power, collection: @powers, input_html: { class: 'select2' } %>
        <%= f.submit 'Add', class: 'btn btn-success mt-2 w-100' %>
      <% end %>
    </div>
  </div>
</div>